<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#1F2937"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#111827"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#374151"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#F9FAFB"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#9CA3AF"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#6B7280"/>

    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#374151"/>
    <SolidColorBrush x:Key="SubtleBorderBrush" Color="#4B5563"/>

    <!-- Primary Accent (Blue) -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#3B82F6"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#2563EB"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="#1D4ED8"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#1E3A5F"/>

    <!-- Danger (Red) -->
    <SolidColorBrush x:Key="DangerBrush" Color="#EF4444"/>
    <SolidColorBrush x:Key="DangerHoverBrush" Color="#DC2626"/>
    <SolidColorBrush x:Key="DangerPressedBrush" Color="#B91C1C"/>

    <!-- Hover/Press States -->
    <SolidColorBrush x:Key="HoverBrush" Color="#374151"/>
    <SolidColorBrush x:Key="PressedBrush" Color="#4B5563"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="#374151"/>

    <!-- Message Card Colors -->
    <SolidColorBrush x:Key="UserMessageBackgroundBrush" Color="#1E3A5F"/>
    <SolidColorBrush x:Key="UserMessageBorderBrush" Color="#2563EB"/>
    <SolidColorBrush x:Key="AssistantMessageBackgroundBrush" Color="#1F2937"/>
    <SolidColorBrush x:Key="AssistantMessageBorderBrush" Color="#374151"/>
    <SolidColorBrush x:Key="SystemMessageBackgroundBrush" Color="#422006"/>
    <SolidColorBrush x:Key="SystemMessageBorderBrush" Color="#92400E"/>

    <!-- Status Colors -->
    <SolidColorBrush x:Key="StreamingIndicatorBrush" Color="#3B82F6"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#EF4444"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#22C55E"/>

</ResourceDictionary>
