<Window x:Class="RevitAI.UI.ConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Action"
        Width="450"
        MinHeight="180"
        MaxHeight="650"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        Topmost="True"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MaxHeight="450"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tool Name Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="Tool:"
                       FontWeight="SemiBold"
                       Foreground="#666666"
                       VerticalAlignment="Center"/>
            <TextBlock x:Name="ToolNameText"
                       Text="tool_name"
                       FontWeight="Bold"
                       FontSize="14"
                       Foreground="#1976D2"
                       Margin="8,0,0,0"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Description - ScrollViewer for long batch operations -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="0,0,0,16">
            <TextBlock x:Name="DescriptionLabel"
                       Text="This tool will perform an action."
                       TextWrapping="Wrap"
                       Foreground="#1976D2"/>
        </ScrollViewer>

        <!-- Don't ask again checkbox -->
        <CheckBox x:Name="DontAskAgainCheckBox"
                  Grid.Row="2"
                  Content="Don't ask again this session for this tool"
                  Foreground="#666666"
                  Margin="0,0,0,16"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="DenyButton"
                    Content="Deny"
                    Padding="20,8"
                    Margin="0,0,8,0"
                    IsCancel="True"
                    Click="DenyButton_Click"/>
            <Button x:Name="AllowButton"
                    Content="Allow"
                    Padding="20,8"
                    IsDefault="True"
                    Background="#1976D2"
                    Foreground="White"
                    BorderBrush="#1565C0"
                    Click="AllowButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
